<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.slashmobility.bottleflip_android.activities.WellcomeActivity">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_welcome_bottle_01"
        android:layout_marginRight="150dp"
        app:layout_constraintRight_toRightOf="@+id/imageView9"
        app:layout_constraintBottom_toBottomOf="@+id/btnLogin"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="150dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:src="@drawable/img_welcome_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/button_lg_radius_stroke"
        android:text="@string/login"
        android:textSize="@dimen/text_size_xxnormal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_lg_radius"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xxnormal"
        app:layout_constraintLeft_toLeftOf="@+id/btnLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btnLogin" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:src="@drawable/img_welcome_bottle_02"
        app:layout_constraintLeft_toLeftOf="@+id/imageView8"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:src="@drawable/img_welcome_bottle_03"
        android:layout_marginLeft="150dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView9"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="150dp" />
</android.support.constraint.ConstraintLayout>
