<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container"
    android:layout_height="match_parent"
    tools:context="com.slashmobility.bottleflip_android.activities.VideoPlayerActivity">

    <include layout="@layout/toolbarlayout" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarlayout"></include>


    <net.protyposis.android.mediaplayer.VideoView
        android:id="@+id/vv"
        android:layout_below="@+id/toolbarlayout"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="250dp"
        />

</RelativeLayout>
